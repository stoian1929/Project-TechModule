@model IEnumerable<Football.Models.Footballs.ListTactics>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 class="text-center">Football Tactic Creator</h1>
    <p class="text-center">You can improve your skills here!</p>
    <p class="text-center">
        <a href="/Football/Create" class="btn btn-primary btn-lg">Add Your</a>
        <a href="/Football/All" class="btn btn-primary btn-lg">Look Another</a>
    </p>
</div>

<div class="row">
    @foreach (var tactic in Model)
    {
        <div class="col-md-6">
            <h2>@tactic.TacticName @tactic.Formation </h2>
            <p>
            <a class="btn btn-default" href="/Football/Details/@tactic.Id">
                <img src="@tactic.Image" class="img-responsive" />
                Learn more &raquo;</a></p>
        </div>
    }
    
</div>