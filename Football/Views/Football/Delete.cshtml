@model Football.Models.Footballs.Delete



<h2>Delete</h2>
<div class="row mt-60 ">
    <div class="col-md-6 ">
        <img src="@Model.Image" class="img-responsive" />
    </div>

    <div class="col-md-6">
        <h1>Tactic Name:<span style="background-color:green"> @Model.TacticName</span> </h1>
    </div>
    <div class="col-md-6">
        <h2>Tactic Formation: @Model.Formation</h2>
        <br />
        <h3>@Model.Description</h3>
        <br />
        <h3>@Model.PlayerPosition</h3>
    </div>
    <br />
</div>


<p class="text-right">
    <span style="color:Highlight">--author</span> @Model.Id
</p>
<div class="form-group">
    <div class="col-sm-4 col-sm-offset-4">
        @Html.ActionLink("Cancel", "Details", "Football", new { Model.Id}, new { @class = "btn btn-default" })
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</div>


