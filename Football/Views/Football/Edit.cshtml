@model Football.Models.Footballs.Edit


<h2>Edit</h2>
@using (Html.BeginForm("Create", "Football", FormMethod.Post))
{
    @Html.EditorForModel();

    <div>
        @Html.LabelFor(m => m.PlayerPosition)
    </div>

    <div>
        @Html.EnumDropDownListFor(m => m.PlayerPosition)
    </div>
}
<div class="form-group">
    <div class="col-sm-4 col-sm-offset-4">
        @Html.ActionLink("Cancel", "All", "Football", null, new { @class = "btn btn-default" })
        <input type="submit" value="Edit" class="btn btn-danger" />
    </div>
</div>
